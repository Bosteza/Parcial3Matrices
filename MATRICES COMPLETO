#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int filas1, columnas1, operacion, filas2, columnas2;

    printf("Ingrese el número de filas: ");
    scanf("%d", &filas1);
    printf("Ingrese el número de columnas: ");
    scanf("%d", &columnas1);
    printf("Ingrese el número de filas2: ");
    scanf("%d", &filas2);
    printf("Ingrese el número de columnas2: ");
    scanf("%d", &columnas2);

    if (columnas1 != filas2 || filas1 <= 0 || columnas1 <= 0 || filas2 <= 0 || columnas2 <= 0) {
        printf("Las dimensiones de las matrices no permiten una multiplicación válida.\n");
        return 1;
    }

    srand(time(NULL));

    int matriz1[filas1][columnas1];
    int matriz2[filas2][columnas2];
    int resultado[filas1][columnas2];

   
   
   do {
        printf("¿Qué operación deseas realizar? (1: suma, 2: resta, 3: multiplicación, 4: suma diagonal, 5: suma triangular, 6: salir): ");
        scanf("%d", &operacion);

	if (operacion == 6) {
            printf("Saliendo del programa.\n");
            break; 
        }

if (operacion == 1) {
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            matriz1[i][j] = rand() % 10;
            matriz2[i][j] = rand() % 10;
            resultado[i][j] = matriz1[i][j] + matriz2[i][j];
        }
    }

    printf("\nMatriz 1:\n");
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            printf("%d ", matriz1[i][j]);
        }
        printf("\n");
    }

    printf("\nMatriz 2:\n");
    for (int i = 0; i < filas2; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", matriz2[i][j]);
        }
        printf("\n");
    }

    printf("\nResultado de la suma:\n");
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", resultado[i][j]);
        }
        printf("\n");
    }

	}
	else if (operacion==2)
	{
		for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            matriz1[i][j] = rand() % 10;
            matriz2[i][j] = rand() % 10;
            resultado[i][j] = matriz1[i][j]-matriz2[i][j];
        }
    }

    printf("\nMatriz 1:\n");
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            printf("%d ", matriz1[i][j]);
        }
        printf("\n");
    }

    printf("\nMatriz 2:\n");
    for (int i = 0; i < filas2; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", matriz2[i][j]);
        }
        printf("\n");
    }

    printf("\nResultado de la resta:\n");
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", resultado[i][j]);
        }
        printf("\n");
    }
		
	}
	else if (operacion==3)
	{
		for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            matriz1[i][j] = rand() % 10;
        }
    }
    for (int i = 0; i < filas2; i++){
        for (int j = 0; j < columnas2; j++){
    	matriz2[i][j] = rand() % 10;
    }
}
    printf("\nMatriz 1:\n");
    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas1; j++) {
            printf("%d ", matriz1[i][j]);
        }
        printf("\n");
    }

    printf("\nMatriz 2:\n");
    for (int i = 0; i < filas2; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", matriz2[i][j]);
        }
        printf("\n");
    }
    printf("\nMatriz 3:\n");
	for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas2; j++) {
            resultado[i][j] = 0;
            for (int k = 0; k < columnas1; k++) {
                resultado[i][j] += matriz1[i][k] * matriz2[k][j];
            }
        }
    }

    for (int i = 0; i < filas1; i++) {
        for (int j = 0; j < columnas2; j++) {
            printf("%d ", resultado[i][j]);
        }
        printf("\n");
    }

	}
	else if (operacion==4)
	{
		int n;

    printf("Ingrese el tamaño de la matriz cuadrada: ");
    scanf("%d", &n);

    int matriz[n][n];
    int sumaDiagonal = 0;
 for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            matriz[i][j] = rand() % 10; 
        }
    }


    printf("Matriz:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    for (int i = 0; i < n; i++) {
        sumaDiagonal += matriz[i][i];
    }

    
    printf("La suma de la diagonal principal es: %d\n", sumaDiagonal);

	}
	else if (operacion==5)
	{

		int n; 
            printf("Ingrese el tamaño de la matriz cuadrada: ");
            scanf("%d", &n);

			int matriz[n][n];

		for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
        matriz[i][j] = rand() % 10;
        }
    }

    printf("\nMatriz:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d  ", matriz[i][j]);
        }
        printf("\n");
    }

    int sumaTriangularSuperior = 0;

    for (int i = 0; i < n; i++) {
        for (int j = i; j < n; j++) {
            sumaTriangularSuperior += matriz[i][j];
        }
    }

    printf("La suma es: %d\n", sumaTriangularSuperior);

		
	}
	else
	{
            printf("Opción no válida. Por favor, elige una opción válida.\n");
     }
} while (1); 

    return 0;
}
